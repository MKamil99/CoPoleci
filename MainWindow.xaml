<Window x:Class="CoPoleci.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="CoPoleci?" Height="600" Width="800" ResizeMode="NoResize" WindowStartupLocation="CenterScreen" WindowStyle="None">
    <Window.Background>
        <LinearGradientBrush EndPoint="0.5,1" MappingMode="RelativeToBoundingBox" StartPoint="0.5,0">
            <GradientStop Color="Black" Offset="1"/>
            <GradientStop Color="#FF2C0303"/>
        </LinearGradientBrush>
    </Window.Background>

    <Grid>
        <Button BorderBrush="{x:Null}" Foreground="{x:Null}" Width="30" Height="30" HorizontalAlignment="Right" VerticalAlignment="Top" Background="{x:Null}" Click="PowerButton_Click">
            <Image Source="Images/powerbtn.png"> </Image>
        </Button>
            <Grid x:Name="GridMenu" Width="250" HorizontalAlignment="Left" Background="Black">
            <StackPanel>
                <Image Height="140" Source="Images/COPOLECI1.png"/>
                <ListView x:Name="ListViewMenu" Foreground="AntiqueWhite" Background="Black"  FontFamily="Champagne &amp; Limousines" FontSize="21" BorderBrush="{x:Null}" SelectionChanged="ListViewMenu_SelectionChanged" SelectedIndex="-1">
                    <ListViewItem Height="45" Padding="0">
                        <StackPanel Orientation="Horizontal">
                            <Image Source="Images/seen.png"></Image>
                            <TextBlock Text="Obejrzane" Margin="10"></TextBlock>
                        </StackPanel>

                    </ListViewItem>
                    <ListViewItem Height="45" Padding="0">
                        <StackPanel Orientation="Horizontal">
                            <Image Source="Images/movie.png"></Image>
                            <TextBlock Text="Filmy" Margin="10"></TextBlock>
                        </StackPanel>

                    </ListViewItem>
                    <ListViewItem Height="45" Padding="0">
                        <StackPanel Orientation="Horizontal">
                            <Image Source="Images/actors.png"></Image>
                            <TextBlock Text="Aktorzy" Margin="10"></TextBlock>
                        </StackPanel>

                    </ListViewItem>
                    <ListViewItem Height="45" Padding="0">
                        <StackPanel Orientation="Horizontal">
                            <Image Source="Images/directors.png"></Image>
                            <TextBlock Text="Reżyserowie" Margin="10"></TextBlock>
                        </StackPanel>

                    </ListViewItem>
                    <ListViewItem Height="45" Padding="0">
                        <StackPanel Orientation="Horizontal">
                            <Image Source="Images/companies.png"></Image>
                            <TextBlock Text="Wytwórnie" Margin="10"></TextBlock>
                        </StackPanel>

                    </ListViewItem>
                    <ListViewItem Height="45" Padding="0">
                        <StackPanel Orientation="Horizontal">
                            <Image Source="Images/ranking.png"></Image>
                            <TextBlock Text="Rankingi" Margin="10"></TextBlock>
                        </StackPanel>

                    </ListViewItem>
                    <ListViewItem Height="45" Padding="0">
                        <StackPanel Orientation="Horizontal">
                            <Image Source="Images/recommendator.png"></Image>
                            <TextBlock Text="Co Poleci?" Margin="10"></TextBlock>
                        </StackPanel>

                    </ListViewItem>

                </ListView>


            </StackPanel>

        </Grid>
        <Grid Margin="250,35,0,0">
            <Grid x:Name="GridPrincipal" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        </Grid>

    </Grid>
</Window>